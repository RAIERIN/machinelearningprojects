#:import hex kivy.utils.get_color_from_hex
<MenuGridlayout>:
    BoxLayout:
        width: 600
        height: 20
        spacing: 10
        pos: 90, 0
        canvas:
            Color:
                rgba: 0,0,0,0
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: "Save"
            size_hint_x: None
            width: 80
            on_press: root.save()
        Button:
            text: "Load"
            size_hint_x: None
            width: 80
            on_press: root.load()
        Button:
            text: "Manual"
            size_hint_x: None
            width: 80
            on_press: root.manual()
